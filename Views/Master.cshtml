@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}

@* the fun starts here *@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>FeedBuzz</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/Contact-Form-Clean.css">
    <link rel="stylesheet" href="/css/Footer-Basic.css">
    <link rel="stylesheet" href="/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="/css/mainStyles.css">
    <link rel="stylesheet" href="/css/Team-Boxed.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="bg-light">
    
        <nav class="navbar navbar-dark bg-primary navbar-expand-md navigation-clean-button sticky-top mb-5">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="/images/logo2.png"></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Umbraco.Content("237ca6f5-d836-4e9d-9a4b-f7ae9099e3a6").Url()">About us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Umbraco.Content("3fe4fded-5604-47bc-809f-4bd55adc44b3").Url()">Contact Us</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">Articles</a>
                                    <div class="dropdown-menu">
                                        @{
                                            var selection = Umbraco.Content(1058)
                                            .Children()
                                            .Where(x => x.IsVisible())
                                            .OrderBy(x => x.Name);
                                        }
                                        @foreach (var item in selection)
                                        {
                                            <a class="dropdown-item" href="@item.Url()">@item.Name()</a>
                                        }
                                    </div>
                                </li>
                                
                            </ul>
                            <span class="navbar-text actions">
                                @Html.Partial("loginStatusPartial")
                            </span>
                        </div>
                
            </div>
                        
        </nav>
        
        <div class="container d-flex">
            
               <div class="col-xxl-10">
                @RenderBody()
               </div>
            
              <div class="col-xxl-2 m-3 d-none d-xxl-block">
                @Html.Partial("randomArticlePartial")
              </div>
            
            
        </div>
        
        
        <div class="mt-4">
            <footer class="footer-basic">
                    
                    <div class="social">
                        <a href="#"><i class="icon ion-social-instagram"></i></a>
                        <a href="#"><i class="icon ion-social-snapchat"></i></a>
                        <a href="#"><i class="icon ion-social-twitter"></i></a>
                        <a href="#"><i class="icon ion-social-facebook"></i></a>
                    </div>
                    
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Home</a></li>
                        <li class="list-inline-item"><a href="#">Services</a></li>
                        <li class="list-inline-item"><a href="#">About</a></li>
                        <li class="list-inline-item"><a href="#">Terms</a></li>
                        <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
                    </ul>
                   
                    <p class="copyright">Articles & Stuff Inc. © 2021</p>
                </footer>
        </div>
        
        
           
                
                
            
        
        
        
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>